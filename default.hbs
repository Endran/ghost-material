<!DOCTYPE html>
<html>
  <head>

    {{! Document Settings }}
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />

    {{! Responsive Meta Tags }}
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {{! Page Meta }}
    <title>{{meta_title}}</title>
    <meta name="description" content="{{meta_description}}" />
    <meta name="theme-color" content="#FFA000">

    {{! CDN resources }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css" />
    <link rel="stylesheet" href="//cdn.materialdesignicons.com/1.3.41/css/materialdesignicons.min.css" />

    {{! Styles }}
    <link rel="stylesheet" href="{{asset "assets/css/screen.css"}}" />
    <link rel="stylesheet" href="{{asset "assets/css/animations.css"}}" />
    <link rel="stylesheet" href="{{asset "assets/css/theme.css"}}" />
    <link rel="stylesheet" type="text/css" href="{{asset "css/prism.css"}}" />

    {{! Ghost header injection }}
    {{ghost_head}}

  </head>

  <body class="{{body_class}}">

    {{! Content }}
    {{{ body }}}

    {{! Footer }}
    <footer class="footer">
      {{! Top part }}
      <div class="footer--top">
      <div class="footer--content container">
        <div class="third">
          <p><a href="{{@blog.url}}">{{@blog.title}}</a><br />
            {{@blog.description}}</p>
        </div>
        <div class="third">
        </div>
        <div class="third">
          <ul class="footer--suscriptions">
            <li>
              <a href="https://github.com/Endran" target="_blank">
                <i class="mdi mdi-github-box"></i>
              </a>
            </li>
            <li>
              <a href="http://stackoverflow.com/users/3108709/endran" target="_blank">
                <i class="mdi mdi-stackoverflow"></i>
              </a>
            </li>
            <li>
              <a href="https://nl.linkedin.com/in/davidhardy85" target="_blank">
                <i class="mdi mdi-linkedin-box"></i>
              </a>
            </li>
            <li>
              <a href="{{@blog.url}}/rss/">
                <i class="mdi mdi-rss-box"></i>
              </a>
            </li>
          </ul>
        </div>
      </div>
      </div>

      {{! Bottom part }}
      <div class="footer--bottom">
      <div class="footer--content container">
        <div class="third">
          <p><i class="mdi mdi-information-outline"></i>
            <a href="http://creativecommons.org/licenses/by-sa/4.0/" target="_blank">
              Creative Commons BY-SA 4.0
            </a> - {{date format="YYYY"}}
          </p>
        </div>
        <div class="third"><p>
            <a href="http://www.endran.nl/">
                David Hardy
            </a><br>
            <a href="https://www.codecentric.nl/" target="_blank">
                Software Craftsman @ Codecentric
            </a></p>
        </div>
        <div class="third">
          <p>
            <i class="mdi mdi-code-tags"></i>
            <a href="http://ghost.org" target="_blank">Ghost</a>
            <a href="https://github.com/nauzethc/ghost-material" target="_blank">Material</a>
            <i class="mdi mdi-xml"></i>
          </p>
        </div>
      </div>
      </div>
    </footer>

    {{! Scripts }}
    <script src="{{asset "assets/js/main.js"}}"></script>
    <script type="text/javascript" src="{{asset "js/prism.js"}}"></script>

    {{! Ghost body injection }}
    {{ghost_foot}}

  </body>
</html>
